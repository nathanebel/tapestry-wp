#!/usr/bin/env node

'use strict'

const exec = require('child_process').exec
const logger = require('../dist/logger')
const cwd = process.cwd()

logger.info('Preparing Tapestryâ€¦\n')

exec(`babel ${cwd} --out-dir ${cwd}/.tapestry --presets=es2015,react  --ignore node_modules,__tests__,_scripts`, (err, stdout, stderr) => {
  if (err) logger.error(err)
  logger.success('Tapestry built! Run `tapestry start` to boot')
})
